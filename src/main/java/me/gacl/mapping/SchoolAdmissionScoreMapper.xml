<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.gacl.dao.SchoolAdmissionScoreMapper" >
  <resultMap id="BaseResultMap" type="me.gacl.domain.SchoolAdmissionScore" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="school_name" property="schoolName" jdbcType="VARCHAR" />
    <result column="school_code" property="schoolCode" jdbcType="VARCHAR" />
    <result column="year" property="year" jdbcType="VARCHAR" />
    <result column="province" property="province" jdbcType="VARCHAR" />
    <result column="max_score" property="maxScore" jdbcType="VARCHAR" />
    <result column="average_score" property="averageScore" jdbcType="VARCHAR" />
    <result column="min_score" property="minScore" jdbcType="VARCHAR" />
    <result column="gmt_created" property="gmtCreated" jdbcType="java.sql.Date" />
    <result column="gmt_modified" property="gmtModified" jdbcType="java.sql.Date" />

  </resultMap>

  <sql id="Base_Column_List" >
    id, school_name, year, province,max_score,average_score,min_score
  </sql>

  <select id="verifyScore" resultMap="BaseResultMap" parameterType="me.gacl.domain.SchoolAdmissionScore" >
    select
    <include refid="Base_Column_List" />
    from max_score,average_score,min_score
    where school_name = #{school_name,jdbcType=VARCHAR} and year=#{year,jdbcType=VARCHAR} an
    d province = #{province.jdbcType=VARCHAR}
  </select>

  <insert id="insertSchoolAdmissionScore" parameterType="me.gacl.domain.SchoolAdmissionScore" >
    insert into school_admission_score (school_name, year,province,max_score,average_score,min_score,gmt_created,gmt_modified)
    values (#{school_name,jdbcType=VARCHAR}, #{year,jdbcType=VARCHAR},#{province,jdbcType=VARCHAR}, #{max_score,jdbcType=VARCHAR},#{average_score,jdbcType=VARCHAR},#{min_score,jdbcType=VARCHAR},now(),now())
  </insert>


</mapper>
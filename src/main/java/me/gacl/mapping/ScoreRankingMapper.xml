<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.gacl.dao.ScoreRankingMapper" >
  <resultMap id="BaseResultMap" type="me.gacl.domain.ScoreRanking" >
    <result column="id" property="id" jdbcType="INTEGER" />
    <result column="province" property="province" jdbcType="VARCHAR" />
    <result column="score" property="score" jdbcType="INTEGER" />
    <result column="ranking" property="ranking" jdbcType="INTEGER" />
    <result column="year" property="year" jdbcType="VARCHAR" />
  </resultMap>

  <sql id="Base_Column_List" >
    province,score,ranking,year
  </sql>

  <select id="selectScorebyRanking" resultMap="BaseResultMap" parameterType="me.gacl.domain.ScoreRanking" >
    select
    <include refid="Base_Column_List" />
    from score_ranking
    where province = #{province,jdbcType=VARCHAR} AND year =  #{year,jdbcType=VARCHAR} ORDER by  ABS(ranking -  #{ranking,jdbcType=INTEGER}) limit 1
  </select>

  <select id="selectRankingbyScore" resultMap="BaseResultMap" parameterType="me.gacl.domain.ScoreRanking" >
    select
    <include refid="Base_Column_List" />
    from score_ranking
    where province = #{province,jdbcType=VARCHAR} AND year =  #{year,jdbcType=VARCHAR}  AND score =  #{score,jdbcType=INTEGER}
  </select>

  <insert id="insertScoreRanking" parameterType="me.gacl.domain.ScoreRanking" >
    insert into score_ranking (province,score,ranking,year)
    values (#{province,jdbcType=VARCHAR},#{score,jdbcType=INTEGER},#{ranking,jdbcType=INTEGER},#{year,jdbcType=VARCHAR})
  </insert>


</mapper>